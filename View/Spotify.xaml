<UserControl x:Class="MusicApplication.View.Spotify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApplication.View"
             xmlns:vm="clr-namespace:MusicApplication.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="1010" 
             d:DesignWidth="1570"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>

        <vm:SpotifyVM />

    </UserControl.DataContext>
    
    <Grid>

        <Border Background="White" CornerRadius="0,20,0,0" >
        </Border>

        <ListBox ItemsSource="{Binding Album.Tracks.Items}" SelectedItem="{Binding SelectedItem}" Width="400" Height="300">

            <ListBox.ItemTemplate>

                <DataTemplate>

                    <TextBlock Text="{Binding Name}" />

                </DataTemplate>
                
            </ListBox.ItemTemplate>

        </ListBox>

    </Grid>
</UserControl>
