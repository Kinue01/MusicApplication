<UserControl x:Class="MusicApplication.View.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApplication.View"
             mc:Ignorable="d" 
             d:DesignHeight="1010" 
             d:DesignWidth="1570"
             Style="{StaticResource Page_Style}">
    <Grid>
        
        <Border Background="White" CornerRadius="0,20,0,0" />

        <StackPanel Width="500" Height="800">

            <TextBox x:Name="user_name" Width="100" />
            <TextBox x:Name="user_password" Width="100" Margin="10" />

        </StackPanel>
        
    </Grid>
</UserControl>
